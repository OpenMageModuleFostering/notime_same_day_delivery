<?xml version="1.0"?>

<config>
    <modules>
        <Notime_Shipping>
            <version>1.0.1</version>
        </Notime_Shipping>
    </modules>
    <frontend>
        <layout>
            <updates>
                <notime_shipping>
                    <file>notime.xml</file>
                </notime_shipping>
            </updates>
        </layout>
        <translate>
            <modules>
                <notime_shipping>
                    <files>
                        <default>Notime_Shipping.csv</default>
                    </files>
                </notime_shipping>
            </modules>
        </translate>
    </frontend>
    <global>
        <blocks>
            <notimeshipping>
                <class>Notime_Shipping_Block</class>
            </notimeshipping>
        </blocks>
        <models>
            <notimeshipping>
                <class>Notime_Shipping_Model</class>
            </notimeshipping>
        </models>
        <helpers>
            <notimeshipping>
                <class>Notime_Shipping_Helper</class>
            </notimeshipping>
        </helpers>
        <resources>
            <notimeshipping_setup>
                <setup>
                    <module>Notime_Shipping</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </notimeshipping_setup>
            <notimeshipping_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </notimeshipping_write>
            <notimeshipping_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </notimeshipping_read>
        </resources>
        <events>
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <notime_save_shipment>
                        <type>singleton</type>
                        <class>Notime_Shipping_Model_Observer</class>
                        <method>notime_shipping_save_shipment_id</method>
                    </notime_save_shipment>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
            <sales_order_save_commit_after>
                <observers>
                    <notime_order_complete>
                        <type>singleton</type>
                        <class>Notime_Shipping_Model_Observer</class>
                        <method>notime_shipping_sales_order_complete</method>
                    </notime_order_complete>
                </observers>
            </sales_order_save_commit_after>
            <core_block_abstract_to_html_after>
                <observers>
                    <notime_core_block_html_before>
                        <type>singleton</type>
                        <class>Notime_Shipping_Model_Observer</class>
                        <method>notime_shipping_core_block_html_after</method>
                    </notime_core_block_html_before>
                </observers>
            </core_block_abstract_to_html_after>
            <sales_quote_collect_totals_before>
              <observers>
                <notime_order_change_price>
                  <type>singleton</type>
                  <class>Notime_Shipping_Model_Observer</class>
                  <method>notime_shipping_salesQuoteCollectTotalsBefore</method>
                </notime_order_change_price>
              </observers>
            </sales_quote_collect_totals_before>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <notime_shipping>
                    <files>
                        <default>Notime_Shipping.csv</default>
                    </files>
                </notime_shipping>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <carriers>
            <notime>
                <active>0</active>
                <model>notimeshipping/carrier_notime</model>
                <name>Same-day (by notime)</name>
                <price>4.90</price>
                <title>Same-day (by notime)</title>
                <type>0</type>
                <shipping_widget></shipping_widget>
                <product_widget></product_widget>
                <show_product_widget></show_product_widget>
                <additional_info></additional_info>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <sort_order>200</sort_order>
            </notime>
        </carriers>
    </default>
</config>
